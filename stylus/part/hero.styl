.hero__block,
.hero__block__left,
.image,
.hero__block__right,
.icons
    display flex
    justify-content: center
    align-items: center
    flex-grow: 1
    flex-shrink: 1
.hero__block
    gap 2em
    padding: 0 5px
.hero__block__left
    flex-basis 40%
.hero__block__right
    flex-basis 60%
    flex-direction: column 
    justify-content: flex-start
    align-items: flex-start
    gap 1em
    .text
        justify-content: center
        align-items: center
        padding: 0 6em 0 15px
        text
            position relative
            &::after
                content: ""
                background-image: url('https://live.verstaem.online/castaway/img/next.svg')
                background-position: center
                background-size: cover
                background-repeat: no-repeat
                position: absolute
                width: 100%
                height: 11px
                bottom: 0
                left 0


.icons
    flex-direction: column
    gap 1em
    justify-content: flex-start
    align-items: flex-start
    .icons__title
        color $white
        margin-left: 2em
    .icons__icon
        ul
            display flex
            color $white
            gap 1em
            margin-left: 2em
            li
            a
                color unset 
                transition: opacity .3s
                &:hover
                    opacity .5
              .icon_list
                    span.demo-icon
                            font-size: 2em





