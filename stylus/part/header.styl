
header
    nav
        display: flex
        text-align: center
        justify-content: space-between
        padding: 5px 0
        gap 5px 
        flex-basis: auto
        flex-grow: 1
        flex-shrink: 1
        
        * 
            flex-grow 1
            justify-content: center
            align-items: center
            flex-shrink: 1

        .logo 
            display flex
            justify-content: center
            align-items: center
            flex-grow 1
            
            .logo__block
                text-transform: uppercase
                font-size: 2em
                color $white
                font-weight: bold

        .empty
            flex-basis 20%
        .nav
            flex-grow 2
            ul
                display flex
                li 
                    padding: 0 5px
                  
