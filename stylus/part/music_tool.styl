.partfolio__block
    display flex
    justify-content center
    align-items center
    background: $black
    border-radius:$br
    margin: 60px 5px 

.music_tool
    display: flex
.music_tool__block
    display: flex
    justify-content: space-between
    align-items: center
    gap 2em 
.partfolio__title
    display flex
    justify-content space-between
    align-items: center
    color $white

    .empty
        flex-basis: 40%
        flex-grow: 1
        flex-shrink: 1

    .menu
        display flex
        border-radius: $bradius 
        gap 2px
        button
            flex-basis auto
            flex-grow: 1
            flex-shrink: 1
            &:first-child
                background: rgba($blue)
                border-radius:$br 0 0$br 
            &:last-child
                border-radius: 0 $br $br 0 

.music_tool__block__left
    flex-basis 40%

.music_tool__block__right
    display flex
    flex-basis 60%
    flex-direction: column
    gap: 44px;
    color: white;
    font-family: 'dmSans';

    .btn > button
        font-size: $p_but1
        border-radius: $br
        padding: $br
    
    .btn2 > button
        font-size: $p_but2
        background:$blue
        border-radius: 10px
        padding: 10px 15px

    .blue_text
        color: $blue
        span
            font-size: $p_but1

.second .music_tool__block__left
                order 2
